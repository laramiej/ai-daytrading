# AI Day Trading System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# AUTHENTICATION (Required for web dashboard)
# ============================================
# Username for dashboard login
AUTH_USERNAME=admin

# Password for dashboard login (CHANGE THIS!)
AUTH_PASSWORD=your_secure_password_here

# Secret key for JWT tokens (generate a random 32+ character string)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT token expiration in hours (default: 24)
JWT_EXPIRATION_HOURS=24

# ============================================
# ALPACA BROKER (Required to run bot)
# ============================================
# Get your API keys from https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key

# Use paper trading (recommended for testing)
ALPACA_PAPER_TRADING=true

# ============================================
# LLM PROVIDER (At least one required)
# ============================================
# Default provider: anthropic, openai, google, or n8n
DEFAULT_LLM_PROVIDER=anthropic

# Anthropic (Claude) - https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI (GPT-4) - https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key

# Google (Gemini) - https://makersuite.google.com/
GOOGLE_API_KEY=your_google_api_key

# n8n Workflow Integration (alternative to direct LLM)
N8N_WEBHOOK_URL=
N8N_TIMEOUT_SECONDS=120

# ============================================
# TRADING CONFIGURATION
# ============================================
# Maximum position size per trade (in USD)
MAX_POSITION_SIZE=1000.0

# Maximum daily loss before stopping (in USD)
MAX_DAILY_LOSS=500.0

# Maximum total portfolio exposure (in USD)
MAX_TOTAL_EXPOSURE=5000.0

# Enable fully automated trading (default: false = manual approval)
ENABLE_AUTO_TRADING=false

# ============================================
# BOT SCHEDULING
# ============================================
# How often to scan for opportunities (in minutes)
SCAN_INTERVAL_MINUTES=5

# Minimum confidence to act on signals (0-100)
MIN_CONFIDENCE_THRESHOLD=70.0

# Enable Bull/Bear/Judge debate system (more thorough but slower)
ENABLE_AI_CRITIQUE=false

# ============================================
# RISK MANAGEMENT
# ============================================
# Stop loss percentage (e.g., 2.0 = 2%)
STOP_LOSS_PERCENTAGE=2.0

# Take profit percentage (e.g., 5.0 = 5%)
TAKE_PROFIT_PERCENTAGE=5.0

# Maximum number of open positions
MAX_OPEN_POSITIONS=5

# Enable short selling
ENABLE_SHORT_SELLING=true

# Maximum exposure per position as % of total exposure
MAX_POSITION_EXPOSURE_PERCENT=25.0

# Auto-close all positions when market closes
CLOSE_POSITIONS_AT_SESSION_END=false

# ============================================
# SENTIMENT ANALYSIS
# ============================================
# Enable Google Trends sentiment
ENABLE_GOOGLE_TRENDS=true

# Finnhub API for market sentiment - https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key
ENABLE_FINNHUB=true

# ============================================
# WATCHLIST
# ============================================
# Comma-separated list of symbols to monitor
WATCHLIST=AAPL,MSFT,GOOGL,AMZN,TSLA,NVDA,META,AMD,NFLX,SPY

# ============================================
# CORS ORIGINS (Optional - for production)
# ============================================
# Comma-separated list of allowed origins for CORS
# Leave empty to allow all origins (not recommended for production)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=
