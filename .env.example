# Alpaca API Keys (get from https://alpaca.markets/)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER_TRADING=true  # Set to false for live trading (NOT RECOMMENDED without thorough testing)

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Trading Configuration
DEFAULT_LLM_PROVIDER=anthropic  # Options: anthropic, openai, google
MAX_POSITION_SIZE=1000  # Maximum USD per position
MAX_DAILY_LOSS=500  # Maximum daily loss in USD before stopping
MAX_TOTAL_EXPOSURE=5000  # Maximum total portfolio exposure in USD
ENABLE_AUTO_TRADING=false  # Set to true for AI to execute trades automatically without approval (still respects all risk limits)

# Risk Management
STOP_LOSS_PERCENTAGE=2.0  # Default stop loss percentage
TAKE_PROFIT_PERCENTAGE=5.0  # Default take profit percentage
MAX_OPEN_POSITIONS=5  # Maximum number of concurrent positions
ENABLE_SHORT_SELLING=true  # Allow selling stocks you don't own (short selling)

# Sentiment Analysis (Phase 2)
ENABLE_GOOGLE_TRENDS=true  # Enable Google Trends sentiment analysis (requires pytrends)
FINNHUB_API_KEY=your_finnhub_api_key_here  # Get free API key from https://finnhub.io/register
ENABLE_FINNHUB=true  # Enable Finnhub for sentiment data (news, analyst ratings, market data)

# Market Data
WATCHLIST=AAPL,MSFT,GOOGL,AMZN,TSLA,NVDA,META,AMD,NFLX,SPY  # Stocks to monitor
